{
  "compileOnSave": false,
  "preserveWhitespaces": "off",
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2019", "es2017", "dom"],
    "module": "es2020",
    "baseUrl": "./",
    "resolveJsonModule": true
  }
}
